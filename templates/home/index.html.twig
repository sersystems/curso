        <tbody>
            {% for cliente in clientes %}
                {% if cliente.edad > 30 %}
                    <tr>
                        <th scope="row">{{ cliente.id }}</th>
                        <td>{{ cliente.nombre }}</td>
                        <td>{{ cliente.edad }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <th scope="row">{{ cliente.id }}</th>
                        <td>{{ cliente.nombre|upper }}</td>
                        <td>{{ cliente.edad }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>

</div>
